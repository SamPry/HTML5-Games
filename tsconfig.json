{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@engine/*": ["engine/*"],
      "@ui/*": ["ui/*"],
      "@persistence/*": ["persistence/*"]
    }
  },
  "include": ["src"],
  "references": []
}
